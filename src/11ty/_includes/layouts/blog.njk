pagination:
  data: collections.posts
  size: 6
  alias: posts
---

{% extends 'layouts/default.pug' %}
{% from "partials/card.njk" import card %}

{% set title = "Posts" %}

{% block content %}
    <section class="post-feed">

        {% for post in posts %}
            {{ card(post) }}
        {% endfor %}
    </section>

    {% include "partials/nextprev.js" %}
{% endblock%}
